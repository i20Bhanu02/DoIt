<%- include("header") -%>

    <div class="box" id="heading">
        <h1><%= kod %></h1>
    </div>

    
    <div class="box" >
        <% items.forEach(function(item){ %>
            <div class="item">
                <form action="/delete" method="post" class="dis">
                    <input type="checkbox">
                    <p class = "listdata"><%= item.name %></p>
                    <input type="hidden" name="list" value="<%= kod %>">
                    <button class="delete" name="delbtn" onchange="this.form.submit()" value="<%= item._id %>">
                        <i class="far fa-trash-alt"></i>
                    </button>
                    
                </form>
            </div>
        <% }) %>

        <form class="add" action="/" method="post">
            <input type="text" name="newItemName" placeholder="New Item" autocomplete="off">
            <button type="submit" name="list" value="<%= kod %>">+</button>
        </form>
    </div>

<%- include("footer") -%>
    